<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <xing.appwidget.widget.AppFilter
        android:id="@+id/app_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_filter"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="全选"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:id="@+id/btn_un_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_select_all"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/btn_select_all"
        android:padding="5dp"
        android:text="全不选"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:id="@+id/tv_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/add_widget"
        android:textColor="@color/textColorPrimary" />

    <!--<androidx.recyclerview.widget.RecyclerView-->
    <xing.appwidget.widget.AppList
        android:id="@+id/rv_app_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_select_all"
        app:al_isGrid="true" />


</RelativeLayout>